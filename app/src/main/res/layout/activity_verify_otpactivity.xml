        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/background_button"
            android:text="VERIFY"
            android:textSize="16sp"
            android:textStyle="bold"/>


    </LinearLayout>

</ScrollView>